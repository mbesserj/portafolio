<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Appender que va a la consola -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--
        Define el nivel del logger raíz (root).
        Cambiamos de OFF a INFO para ver los mensajes de resumen.
        Valores posibles: TRACE, DEBUG, INFO, WARN, ERROR, ALL, OFF.
    -->
    <root level="INFO">
        <!-- Asegúrate de que este appender-ref esté presente para que los logs salgan por consola -->
        <appender-ref ref="STDOUT" />
    </root>

    <!--
        Puedes configurar loggers específicos si solo quieres desactivar logs de ciertas clases/paquetes
        Por ejemplo, para desactivar los logs de Hibernate/JPA, pero mantener los de tu aplicación:
    -->
    <logger name="org.hibernate" level="WARN"/>
    <logger name="jakarta.persistence" level="WARN"/>
    <logger name="com.app.dao" level="INFO"/>
    <logger name="com.app.excel" level="INFO"/>
    <logger name="com.app.service" level="INFO"/>
    <logger name="com.app.main" level="INFO"/>

</configuration>
